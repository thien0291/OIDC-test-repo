<div class="fixed top-0 left-0 w-full bg-white shadow-md z-50">
  <nav class="bg-white border-gray-200">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
      <a href="/" class="flex items-center">
          <img src="https://flowbite.com/docs/images/logo.svg" class="h-8 mr-3" alt="Flowbite Logo" />
          <span class="self-center text-xl font-semibold whitespace-nowrap font-monoton">ABC News</span>
      </a>

      <div class="flex items-center md:order-2">
        <% if user_signed_in? %>
          <%= render "layouts/sidebar" %>
        <% else %>
          <div class="flex items-center">
            <div class="py-2 w-24 mx-2 text-center text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200">
              <%= link_to "Sign In", new_user_session_path, class:"nav-link" %>
            </div>
            <div class="py-2 w-24 mx-2 text-center text-sm text-white font-medium bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 rounded-lg focus:outline-none">
              <%= link_to "Sign Up", new_user_registration_path, class:"nav-link" %>
            </div>
          </div>
        <% end %>

        <!-- Mobile view collapsed navbar -->
        <button data-collapse-toggle="navbar-user" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-user" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
        </button>
      </div>

      <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-user">
        <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-white">
          <% all_categories.each do |category_name| %>
            <li>
              <% nav_decorator_classes = "text-gray-900 hover:bg-gray-100 md:hover:bg-transparent md:hover:text-primary-700" %>
              <% nav_decorator_classes = "text-white bg-blue-700  bg-transparent md:text-blue-700" if @category_name&.downcase == category_name.downcase %>
              <a href="/categories/<%= category_name %>" class="block py-2 pl-3 pr-4 rounded md:p-0 <%= nav_decorator_classes %>"><%= category_name.titleize %></a>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
  </nav>
</div>
