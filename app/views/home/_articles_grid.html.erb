<div class="grid gap-6 grid-cols-<%= grid_col %> xl:gap-x-12 text-start">
  <% articles.first(lines*grid_col).each do |article| %>
    <div class="mb-6 lg:mb-0">
      <div class="relative mb-2 overflow-hidden rounded bg-cover bg-no-repeat shadow-lg">
        <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/018.jpg" class="w-full" alt="Louvre" />
        <a href="<%= article_path(article) %>">
          <div class="absolute top-0 right-0 bottom-0 left-0 h-full w-full overflow-hidden bg-fixed opacity-0 transition duration-300 ease-in-out hover:opacity-100 bg-[hsla(0,0%,98.4%,.15)]">
          </div>
        </a>
      </div>

      <div class="mb-2 h-12 flex items-center">
        <a href="<%= article_path(article) %>" class="text-lg font-bold hover:text-neutral-700 hover:underline">
          <%= article.title.truncate_words(8) %>
        </a>
      </div>
              
      <div class="mb-2 h-16 flex items-start text-neutral-500">
        <%= article.summary.truncate_words(10) %>
      </div>

      <div class="mb-2 h-8 flex items-center">
        <span class="text-red-700 font-semibold">|</span>
        <span class="text-neutral-700 ml-1">
          <% tag_list = article.category_list.map { |tag| tag.capitalize } %>
          <%= tag_list.join(', ') %>
        </span>
      </div>
    </div>
  <% end %>
</div>